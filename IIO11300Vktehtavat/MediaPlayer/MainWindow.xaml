<Window x:Class="MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="play" Content="Play" Click="btnPlay" HorizontalAlignment="Left" Margin="31,22,0,0" VerticalAlignment="Top" Width="75"/>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Left" Height="203" Margin="31,82,0,0" LoadedBehavior="Manual" UnloadedBehavior="Stop" VerticalAlignment="Top" Width="390"/>
        <Button x:Name="pause" Content="Pause" Click="btnPause" HorizontalAlignment="Left" Margin="130,22,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False"/>
        <Button x:Name="stop" Content="Stop" Click="btnStop"  HorizontalAlignment="Left" Margin="232,22,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False"/>
        <TextBox x:Name="txtFileName" HorizontalAlignment="Left" Height="23" Margin="31,54,0,0" TextWrapping="Wrap" Text="D:\CoffeeMaker.mp4" VerticalAlignment="Top" Width="390"/>
        <Button x:Name="button3" Content="Browse" HorizontalAlignment="Left" Margin="346,22,0,0" VerticalAlignment="Top" Width="75" Click="btnBrowse_Click"/>

    </Grid>
</Window>
